<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
        <link href="{{ asset('css/main.css') }}" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
    <nav class="flex justify-around bg-blue-700 text-white h-16">
        <a href="{{path('tournois')}}" class="m-5">Tournois<a/>
        <a href="{{path('equipe')}}" class="m-5">Equipe<a/>
        <a href="{{path('joueur')}}" class="m-5">Joueurs<a/>
        <a href="{{path('dashboard')}}" class="m-5">Tableau de bord<a/>
        {% if app.user %}
            <a href="{{ path('app_logout') }}" class="m-5">Se deconnecter</a>
        {% else %}
            <a href="{{ path('app_login') }}" class="m-5">Se connecter</a>
        {% endif %}
    </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
