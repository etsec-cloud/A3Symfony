{% extends 'base.html.twig' %}

{% block title %}Hello TournoisController!{% endblock %}
{% block body %}
    {% for tournoi in tournois %}
    <div class="p-5 bg-gray-300 flex-coln">
        <a href="{{path('tournoiShow',{'slug': tournoi.slug}) }}">Nom : {{tournoi.nom}} </a>
        <p class="my-2">Description : {{tournoi.description}}</p>
        <p class="my-2">Jeu : {{tournoi.jeu}}</p>
        <p class="my-2">Date de d√©but : {{tournoi.date|date("m/d/Y")}}</p>
        <p class="my-2">Date de fin : {{tournoi.dateFin | date("m/d/Y")}}</p>
